  section(class="container mx-auto px-4 xl:px-32 py-16" id="contact")
    h2(class="text-4xl font-medium text-center") Contact
    p(class="text-2xl bg-gradient-to-r from-skyblue to-navyblue text-transparent bg-clip-text text-center mb-16") Get a hold of us. We're always happy to talk!
    form(method="POST" action="/send")
      div(class="text-xl mb-4")
        label(class="block my-2" for="name") Name
        input(class="appearance-none border rounded w-full py-2 px-3" type="text" name="from_name" id="name" placeholder="Full Name *")
      div(class="text-xl mb-4")
        label(class="block my-2" for="email") Email address
        input(class="appearance-none border rounded w-full py-2 px-3" type="text" name="from_email" id="email" placeholder="Email Address *")
      div(class="text-xl mb-4")
        label(class="block my-2" for="body") Message
        textarea(class="appearance-none border rounded w-full py-2 px-3" type="text" name="body" id="body" rows="7" placeholder="Message" style="resize: none;")
