doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="icon" href="/public/images/kochii-logo.png" type="image/png")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css")
    link(rel='stylesheet' href='/public/css/main.css')
  body
    block navigation
      nav(class='nav')
        div(class='navbar container')
          div(class="navbar__btn")
            span(class="navbar__btn--icon")
          a(class='navbar__logo' href="/")
            img(class="navbar__logo--image" alt="Kochii banner" src="/public/images/kochii-banner.png")
          div(class="navbar__menu-container")
            ul(class="navbar__menu")
              li(class="navbar__menu--item")
                a(class='navbar__menu--link' href='/') Home
              li(class="navbar__menu--item")
                a(class='navbar__menu--link' href='/recipes') Recipes
              li(class="navbar__menu--item")
                a(class='navbar__menu--link' href='/about-us') About Us
            ul(class="navbar__menu")
              li(class="navbar__menu--item navbar__menu__btn")
                a(class='navbar__menu--link navbar__menu__btn--grey' href='/') Login
              li(class="navbar__menu--item navbar__menu__btn")
                a(class='navbar__menu--link navbar__menu__btn--white' href='/recipes') Register
              li(class="navbar__menu--item navbar__menu--icon-container")
                a(class='navbar__menu--link' href='https://twitter.com/kochiiapp' target='_blank' rel='noreferrer')
                  i(class='bi bi-twitter')
              li(class='navbar__menu--item navbar__menu--icon-container')
                a(class="navbar__menu--link" href='https://github.com/jeffreyrampineda/kochii' target='_blank' rel='noreferrer')
                  i(class='bi bi-github')
    block content
    footer(class="footer bg-primary")
      div(class='bg-blue-gradient')
        div(class="container")
          div(class="footer__socials row d-flex-align-center text-center p-1 py-1 text-white")
            p Get connected with us on social networks!
            div(class='d-flex g-1')
              a(href='https://twitter.com/kochiiapp' target='_blank' rel='noreferrer')
                i(class='bi bi-twitter text-white')
              a(href='https://www.reddit.com/user/kochiiapp' target='_blank' rel='noreferrer')
                i(class='bi bi-reddit text-white')
              a(href='https://www.linkedin.com/in/jeffreyrampineda' target='_blank' rel='noreferrer')
                i(class='bi bi-linkedin text-white')
              a(href='https://www.instagram.com/kochiiapp' target='_blank' rel='noreferrer')
                i(class='bi bi-instagram text-white')
      div(class="container")
        div(class="footer__content text-grey")
          div(class="footer__content--column")
            h4(class="footer__content--header") Company
            p(class="footer__content--description").
              Kochii is a personal open source project created by Jeffrey Ram
              Pineda as a hobby. It is created with Angular as a frontend
              framework, Express.js for the backend server, and MongoDB as its
              database.
          div(class="footer__content--column")
            h4(class="footer__content--header") Technologies
            p(class="footer__content--description") #[a(class="text-grey" href="https://fdc.nal.usda.gov") Food Data Central]
            p(class="footer__content--description") #[a(class="text-grey" href="https://angular.io") Angular]
            p(class="footer__content--description") #[a(class="text-grey" href="https://expressjs.com") Express]
            p(class="footer__content--description") #[a(class="text-grey" href="https://www.mongodb.com") MongoDB]
          div(class="footer__content--column")
            h4(class="footer__content--header") Useful Links
            p(class="footer__content--description") #[a(class="text-grey" href="#") Become an Affiliate]
            p(class="footer__content--description") #[a(class="text-grey" href="#") Help]
          div(class="footer__content--column")
            h4(class="footer__content--header") Contact
            p(class="footer__content--description") #[i(class="bi bi-house-door-fill")  Toronto, ON, Canada]
            p(class="footer__content--description") #[i(class="bi bi-envelope-fill")  contact@kochii.app]
            p(class="footer__content--description") #[i(class="bi bi-telephone-fill")  + 01 234 567 8910]
      div(class="bg-primary-dark")
        div(class="container")
          div(class="footer__foot text-grey")
            p Kochii &copy; 2023 All Rights Reserved
            p
              a(class="text-white" href='/legal/terms-of-service') Terms of Service
              |  | 
              a(class="text-white" href='/legal/privacy-policy') Privacy Policy
    script(src="/public/js/main.js")