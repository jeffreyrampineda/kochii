extends ../layout

block content
  div(class="container p-1 py-3" style="min-height:100vh;")
    div(class="row pt-2")
      div(class="col")
        h2(class="header-3 text-center") Recipes
        div(class="row g-1 d-flex-justify-center my-1")
          a(class="btn-sm btn--border-primary text-primary text-center" href="#") All
          a(class="btn-sm btn--border-primary text-primary text-center" href="#") Chicken
          a(class="btn-sm btn--border-primary text-primary text-center" href="#") Pork
          a(class="btn-sm btn--border-primary text-primary text-center" href="#") Beef
        div(Class="recipes__container")
          each post, index in posts
            div(class="recipes__card")
              a(style="display: block; height: 100%;" href=post.url)
                img(class="featured-recipes__card--image" src=`data:${post.banner.contentType};base64,${post.banner.data.toString('base64')}`)
                div(class="featured-recipes__card--content text-white")
                  h4(class="recipes__card--title") #{post.title}
                  p by #{post.author.full_name_formatted}
                  div(class="recipes__tags mt-1")
                    each tag, index in post.tags
                      span #{tag}
                      if index < post.tags.length - 1
                        i(class="bi bi-dot")
          else
            h2(class="header-3") This Recipes Catalog is empty.
